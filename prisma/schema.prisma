// データベース接続設定 (Supabaseなど)
datasource db {
  provider = "postgresql" // SupabaseはPostgreSQL
  url      = env("DATABASE_URL")
}

// Prisma Client生成設定
generator client {
  provider = "prisma-client-js"
}


model Location {
  id        Int       @id @default(autoincrement()) //自動で追加しますよ
  title     String
  lat       Float //イド
  lng       Float //けいど
  eraStart  Int? //年代スタート
  eraEnd    Int? //年代エンド(いまないかも)
  abst      String? //概要
  detail    String? //詳細
  createdAt DateTime  @default(now())
}

model Post {
  id        Int       @id @default(autoincrement()) //自動で追加しますよ
  title     String
  lat       Float //イド
  lng       Float //けいど
  eraStart  Int? //年代スタート
  eraEnd    Int? //年代エンド(いまないかも)
  abst      String? //概要
  detail    String? //詳細
  createdAt DateTime  @default(now())
}