// データベース接続設定 (Supabaseなど)
datasource db {
  provider = "postgresql" // SupabaseはPostgreSQL
  url      = env("DATABASE_URL")
}

// Prisma Client生成設定
generator client {
  provider = "prisma-client-js"
}


model Location {
  id        Int       @id @default(autoincrement())
  title     String
  lat       Float
  lng       Float
  eraStart  Int?
  eraEnd    Int?
  abst      String?
  detail    String?
  createdAt DateTime  @default(now())
}