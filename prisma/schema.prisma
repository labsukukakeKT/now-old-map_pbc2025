generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model post {
  post_id       Int      @id @default(autoincrement())

  // 外部キー（参照元）
  user_id       Int
  place_id      Int

  // リレーション（参照先）
  user_DB       user_DB  @relation(fields: [user_id], references: [user_id])
  place_DB      place_DB @relation(fields: [place_id], references: [place_id])

  description   String
  user_photo    String?
  photo_url     String?

  uploaded_date DateTime @default(now())

  @@index([user_id])
  @@index([place_id])
}

model user_DB {
  user_id           Int    @id @default(autoincrement())
  user_name         String
  user_description  String?
  user_photo_url    String?

  // 逆参照（1人のユーザーが複数Postを持つ）
  posts             post[]
}

model place_DB {
  place_id           Int      @id @default(autoincrement())
  lattitude          Float
  longitude          Float
  place_name         String
  place_description  String?
  place_photo_url    String?

  place_era_start    Int?
  place_era_end      Int?

  // 逆参照（1つの場所が複数Postを持つ）
  posts              post[]
}
